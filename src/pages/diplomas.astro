---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import DiplomaDisplay from '../components/DiplomaDisplay.astro';
import DiplomaLightbox from '../components/DiplomaLightbox.astro';
import { SITE_TITLE } from '../consts';

// Listar los diplomas con imágenes temáticas específicas y diplomas reales
const diplomaFiles = [
	{
		title: "Creacion de aplicaciones moviles y de escritorio con .NET MAUI",
		themeImageUrl: "https://images.unsplash.com/photo-1551650975-87deedd944c3?w=400&h=300&fit=crop&auto=format", // Mobile development theme
		diplomaImageUrl: "/diplomas/Diploma8.jpg"
	},
	{
		title: "Programador (Orientado a objetos)",
		themeImageUrl: "https://images.unsplash.com/photo-1555949963-aa79dcee981c?w=400&h=300&fit=crop&auto=format", // OOP Programming theme
		diplomaImageUrl: "/diplomas/diploma1.jpg"
	},
	{
		title: "Uso responsable de dispositivos electronicos",
		themeImageUrl: "https://images.unsplash.com/photo-1498049794561-7780e7231661?w=400&h=300&fit=crop&auto=format", // Digital responsibility and ethics theme
		diplomaImageUrl: "/diplomas/diploma2.jpg"
	},
	{
		title: "Evaluador de experiencias de usuario (UX)",
		themeImageUrl: "https://images.unsplash.com/photo-1561070791-2526d30994b5?w=400&h=300&fit=crop&auto=format", // UX Design theme
		diplomaImageUrl: "/diplomas/diploma3.jpg"
	},
	{
		title: "Programador en C#",
		themeImageUrl: "https://images.unsplash.com/photo-1515879218367-8466d910aaa4?w=400&h=300&fit=crop&auto=format", // C# .NET development theme
		diplomaImageUrl: "/diplomas/diploma4.jpg"
	},
	{
		title: "Paradigma de programacion (Orientado a objetos)",
		themeImageUrl: "https://images.unsplash.com/photo-1542831371-29b0f74f9713?w=400&h=300&fit=crop&auto=format", // Programming paradigms theme
		diplomaImageUrl: "/diplomas/diploma5.jpg"
	},
	{
		title: "Diseñador de experiencias de usuario (UX)",
		themeImageUrl: "https://images.unsplash.com/photo-1586717791821-3f44a563fa4c?w=400&h=300&fit=crop&auto=format", // UX/UI Design theme
		diplomaImageUrl: "/diplomas/diploma6.jpg"
	},
	{
		title: "Desarrollador de interfaces graficas",
		themeImageUrl: "https://images.unsplash.com/photo-1559028006-448665bd7c7f?w=400&h=300&fit=crop&auto=format", // GUI Development theme
		diplomaImageUrl: "/diplomas/diploma7.jpg"
	}
]
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={"Diplomas | " + SITE_TITLE} description={"Certificaciones y diplomas profesionales"} />
	</head>
	<body>
		<Header />
		<main>
			<section class="diplomas-section">				<h1>Mis Certificaciones y Diplomas</h1>
				<p class="section-description">
					Estas son las certificaciones y diplomas que he obtenido a lo largo de mi carrera profesional.
					Las imágenes muestran el área temática de cada certificación. <strong>Haz clic en cualquier tarjeta para ver el diploma oficial.</strong>
				</p>
				
				<div class="diplomas-grid">
					{diplomaFiles.map((diploma) => (
						<DiplomaDisplay 
							title={diploma.title}
							themeImageUrl={diploma.themeImageUrl}
							diplomaImageUrl={diploma.diplomaImageUrl}
						/>
					))}
				</div>
			</section>		</main>
		<Footer />
		<DiplomaLightbox />
	</body>
</html>

<style>
	.diplomas-section {
		margin-bottom: 3rem;
	}

	.section-description {
		text-align: center;
		margin-bottom: 2.5rem;
		color: #666;
		max-width: 80%;
		margin-left: auto;
		margin-right: auto;
	}
	.diplomas-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	@media (min-width: 640px) {
		.diplomas-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 1024px) {
		.diplomas-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}	.diploma-card {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}

	.diploma-image {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}

	.diploma-info {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}
	.diploma-info h3 {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}

	.diploma-date, .diploma-institute {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}

	.diploma-description {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}
</style>
