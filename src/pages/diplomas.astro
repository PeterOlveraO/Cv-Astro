---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import DiplomaDisplay from '../components/DiplomaDisplay.astro';
import DiplomaLightbox from '../components/DiplomaLightbox.astro';
import { SITE_TITLE } from '../consts';

// Listar los diplomas con imágenes temáticas que representan el contenido del diploma
const diplomaFiles = [
	{
		title: "Creacion de aplicaciones moviles y de escritorio con .NET MAUI",
		themeImageSrc: "https://images.unsplash.com/photo-1611162617213-7d7a39e9b1d7?w=500&h=350&fit=crop&q=80&auto=format", // Imagen específica de aplicaciones móviles/escritorio
		diplomaImageUrl: "/diplomas/Diploma8.jpg"
	},
	{
		title: "Programador (Orientado a objetos)",
		themeImageSrc: "https://images.unsplash.com/photo-1516116216624-53e697fedbea?w=500&h=350&fit=crop&q=80&auto=format", // Programación OOP con diagramas de clase
		diplomaImageUrl: "/diplomas/diploma1.jpg"
	},
	{
		title: "Uso responsable de dispositivos electronicos",
		themeImageSrc: "https://images.unsplash.com/photo-1550751827-4bd374c3f58b?w=500&h=350&fit=crop&q=80&auto=format", // Imagen de ética tecnológica y uso responsable
		diplomaImageUrl: "/diplomas/diploma2.jpg"
	},
	{
		title: "Evaluador de experiencias de usuario (UX)",
		themeImageSrc: "https://images.unsplash.com/photo-1555774698-0b77e0d5fac6?w=500&h=350&fit=crop&q=80&auto=format", // Evaluación UX con wireframes
		diplomaImageUrl: "/diplomas/diploma3.jpg"
	},
	{
		title: "Programador en C#",
		themeImageSrc: "https://images.unsplash.com/photo-1633356122102-3fe601e05bd2?w=500&h=350&fit=crop&q=80&auto=format", // Código C# específico
		diplomaImageUrl: "/diplomas/diploma4.jpg"
	},
	{
		title: "Paradigma de programacion (Orientado a objetos)",
		themeImageSrc: "https://images.unsplash.com/photo-1507721999472-8ed4421c4af2?w=500&h=350&fit=crop&q=80&auto=format", // Estructura de paradigmas de programación
		diplomaImageUrl: "/diplomas/diploma5.jpg"
	},
	{
		title: "Diseñador de experiencias de usuario (UX)",
		themeImageSrc: "https://images.unsplash.com/photo-1561070791-2526d30994b5?w=500&h=350&fit=crop&q=80&auto=format", // Diseño UX con persona y journey map
		diplomaImageUrl: "/diplomas/diploma6.jpg"
	},
	{
		title: "Desarrollador de interfaces graficas",
		themeImageSrc: "https://images.unsplash.com/photo-1559028012-481c04fa702d?w=500&h=350&fit=crop&q=80&auto=format", // Desarrollo de interfaces gráficas
		diplomaImageUrl: "/diplomas/diploma7.jpg"
	}
]
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={"Diplomas | " + SITE_TITLE} description={"Certificaciones y diplomas profesionales"} />
	</head>
	<body>
		<Header />
		<main>
			<section class="diplomas-section">				<h1>Mis Certificaciones y Diplomas</h1>
				<p class="section-description">
					Estas son las certificaciones y diplomas que he obtenido a lo largo de mi carrera profesional.
					
				</p>
				
				<div class="diplomas-grid">
					{diplomaFiles.map((diploma) => (
						<DiplomaDisplay 
							title={diploma.title}
							themeImageSrc={diploma.themeImageSrc}
							diplomaImageUrl={diploma.diplomaImageUrl}
						/>
					))}
				</div>
			</section>		</main>
		<Footer />
		<DiplomaLightbox />
	</body>
</html>

<style>
	.diplomas-section {
		margin-bottom: 3rem;
	}

	.section-description {
		text-align: center;
		margin-bottom: 2.5rem;
		color: #666;
		max-width: 80%;
		margin-left: auto;
		margin-right: auto;
	}
	.diplomas-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	@media (min-width: 640px) {
		.diplomas-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 1024px) {
		.diplomas-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}	.diploma-card {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}

	.diploma-image {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}

	.diploma-info {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}
	.diploma-info h3 {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}

	.diploma-date, .diploma-institute {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}

	.diploma-description {
		display: none; /* Ocultamos estos estilos ya que no los usamos */
	}
</style>
