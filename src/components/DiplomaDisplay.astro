---
// Propiedades para cada diploma
export interface Props {
  title: string;
  themeImageSrc: string;
  diplomaImageUrl: string;
}

const { title, themeImageSrc, diplomaImageUrl } = Astro.props;

// URL de imagen de respaldo en caso de que la principal falle
const fallbackImageUrl = "/projects/app-1.jpg";
---

<div class="diploma-display" data-diploma-url={diplomaImageUrl}>
  <div class="diploma-image-container">
    <img 
      src={themeImageSrc} 
      alt={`Tema de ${title}`} 
      onerror="this.onerror=null; this.src='/projects/app-1.jpg';"
    />
    <div class="diploma-overlay">
      <div class="diploma-fullscreen-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 3 21 3 21 9"></polyline>
          <polyline points="9 21 3 21 3 15"></polyline>
          <line x1="21" y1="3" x2="14" y2="10"></line>
          <line x1="3" y1="21" x2="10" y2="14"></line>
        </svg>
        <span>ðŸ“œ Ver Diploma Oficial</span>
      </div>
    </div>
  </div>
  <div class="diploma-title">
    <h3>{title}</h3>
  </div>
</div>

<style>
  .diploma-display {
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    cursor: pointer;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    background-color: var(--surface-dark);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .diploma-display:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
  }  .diploma-image-container {
    width: 100%;
    padding: 0.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 250px; /* Altura reducida para mejor proporciÃ³n */
    position: relative;
    overflow: hidden;
  }

  .diploma-image-container img {
    width: 100%;
    height: 100%;
    object-fit: contain; /* Esto asegura que toda la imagen sea visible */
    border-radius: 4px;
    transition: transform 0.3s ease;
  }

  .diploma-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .diploma-display:hover .diploma-overlay {
    opacity: 1;
  }

  .diploma-fullscreen-icon {
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .diploma-fullscreen-icon svg {
    width: 40px;
    height: 40px;
    margin-bottom: 10px;
  }

  .diploma-fullscreen-icon span {
    font-size: 14px;
  }

  .diploma-display:hover .diploma-image-container img {
    transform: scale(1.02);
  }

  .diploma-title {
    padding: 1rem;
    text-align: center;
    border-top: 1px solid var(--surface-variant);
  }

  .diploma-title h3 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--accent);
  }  /* Estilos para pantallas grandes */
  @media (min-width: 768px) {
    .diploma-image-container {
      height: 320px; /* Altura mÃ¡s proporcionada para pantallas grandes */
    }

    .diploma-image-container img {
      max-height: 100%;
      max-width: 100%;
    }
  }
</style>

<script>
  // Declarar tipos para funciones globales
  declare global {
    interface Window {
      showDiplomaLightbox?: (src: string, caption: string) => void;
    }
  }

  // AÃ±adir funcionalidad para abrir la imagen en el lightbox al hacer clic
  document.addEventListener('DOMContentLoaded', () => {
    const diplomaDisplays = document.querySelectorAll('.diploma-display');
    
    if (diplomaDisplays) {
      diplomaDisplays.forEach(display => {
        display.addEventListener('click', () => {
          // Obtener la URL del diploma real del atributo data-diploma-url
          const diplomaUrl = display.getAttribute('data-diploma-url');
          const titleElement = display.querySelector('.diploma-title h3');
          const title = titleElement?.textContent || 'Diploma';
          
          if (diplomaUrl && window.showDiplomaLightbox) {
            window.showDiplomaLightbox(diplomaUrl, title);
          }
        });
      });
    }
  });
</script>
