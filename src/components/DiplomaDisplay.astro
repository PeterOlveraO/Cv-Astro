---
// Propiedades para cada diploma
export interface Props {
  title: string;
  themeImageUrl: string; // Imagen tem치tica que se muestra inicialmente
  diplomaImageUrl: string; // Diploma real que se abre en el lightbox
}

const { title, themeImageUrl, diplomaImageUrl } = Astro.props;
---

<div class="diploma-display" data-diploma-url={diplomaImageUrl}>
  <div class="diploma-image-container">
    <img src={themeImageUrl} alt={`Tema relacionado con ${title}`} />
    <div class="diploma-overlay">
      <div class="diploma-fullscreen-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14,2 14,8 20,8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10,9 9,9 8,9"></polyline>
        </svg>
        <span>游닆 Ver Diploma Oficial</span>
      </div>
    </div>
  </div>
  <div class="diploma-title">
    <h3>{title}</h3>
  </div>
</div>

<style>
  .diploma-display {
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    cursor: pointer;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    background-color: var(--surface-dark);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .diploma-display:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
  }  .diploma-image-container {
    width: 100%;
    padding: 0.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 250px; /* Altura reducida para mejor proporci칩n */
    position: relative;
    overflow: hidden;
  }

  .diploma-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Cambiado para mejor visualizaci칩n de im치genes tem치ticas */
    border-radius: 4px;
    transition: transform 0.3s ease;
    filter: brightness(0.9) contrast(1.1); /* Efecto sutil para distinguir que son tem치ticas */
  }

  .diploma-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .diploma-display:hover .diploma-overlay {
    opacity: 1;
  }

  .diploma-fullscreen-icon {
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: rgba(245, 100, 100, 0.9);
    padding: 1.5rem;
    border-radius: 12px;
    backdrop-filter: blur(4px);
  }

  .diploma-fullscreen-icon svg {
    width: 40px;
    height: 40px;
    margin-bottom: 12px;
  }

  .diploma-fullscreen-icon span {
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .diploma-display:hover .diploma-image-container img {
    transform: scale(1.02);
  }

  .diploma-title {
    padding: 1rem;
    text-align: center;
    border-top: 1px solid var(--surface-variant);
  }

  .diploma-title h3 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--accent);
  }  /* Estilos para pantallas grandes */
  @media (min-width: 768px) {
    .diploma-image-container {
      height: 320px; /* Altura m치s proporcionada para pantallas grandes */
    }

    .diploma-image-container img {
      max-height: 100%;
      max-width: 100%;
    }
  }
</style>

<script>
  // Declarar tipos para funciones globales
  declare global {
    interface Window {
      showDiplomaLightbox?: (src: string, caption: string) => void;
    }
  }

  // A침adir funcionalidad para abrir el diploma real en el lightbox al hacer clic
  document.addEventListener('DOMContentLoaded', () => {
    const diplomaDisplays = document.querySelectorAll('.diploma-display');
    
    if (diplomaDisplays) {
      diplomaDisplays.forEach(display => {
        display.addEventListener('click', () => {
          const diplomaUrl = display.getAttribute('data-diploma-url');
          const titleElement = display.querySelector('.diploma-title h3');
          
          const title = titleElement?.textContent || 'Diploma';
          
          if (diplomaUrl && window.showDiplomaLightbox) {
            // Mostramos el diploma real en el lightbox
            window.showDiplomaLightbox(diplomaUrl, title);
          }
        });
      });
    }
  });
</script>
